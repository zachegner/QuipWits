{
  "name": "quipwits",
  "version": "1.0.0",
  "main": "server/index.js",
  "bin": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "npx @yao-pkg/pkg . --targets node20-win-x64 --output dist/QuipWits-Windows.exe",
    "build:mac": "npx @yao-pkg/pkg . --targets node20-macos-x64 --output dist/QuipWits-macOS",
    "build:linux": "npx @yao-pkg/pkg . --targets node20-linux-x64 --output dist/QuipWits-Linux"
  },
  "pkg": {
    "scripts": [
      "server/**/*.js",
      "shared/**/*.js"
    ],
    "assets": [
      "client-host/**/*",
      "client-phone/**/*",
      "shared/**/*",
      "prompts/**/*"
    ],
    "targets": [
      "node20-win-x64",
      "node20-macos-x64"
    ],
    "outputPath": "dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "QuipWits party game",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@yao-pkg/pkg": "^6.10.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "socket.io-client": "^4.8.1"
  }
}
